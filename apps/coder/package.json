{
  "name": "buntime-ide",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "bun scripts/build.ts",
    "check": "biome check --write .",
    "dev": "bun --hot --watch index.dev.ts",
    "lint": "bun run --filter '*' lint",
    "preview": "bun run build && cd dist && bun index.js",
    "test:coverage": "bun run --filter '*' test:coverage",
    "test": "bun run --filter '*' test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@iconify/json": "^2.2.412",
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@tanstack/router-generator": "^1.139.12",
    "@types/bun": "latest",
    "@types/node": "^24.10.1",
    "bun-plugin-tailwind": "^0.1.2",
    "typescript": "~5.9.3"
  }
}
