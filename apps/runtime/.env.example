# Server settings
NODE_ENV=development  # default=development
PORT=8000             # default=8000

# LibSQL database (required)
LIBSQL_URL=http://localhost:8880  # dev: Docker, prod: http://libsql:8080
LIBSQL_AUTH_TOKEN=                # optional: auth token if libSQL server requires it

# Root API key (required for first access)
# Generate with: openssl rand -hex 32
ROOT_KEY=

# Plugins and workers directories
PLUGIN_DIRS=<path-to-plugins>
WORKER_DIRS=<path-to-apps>
