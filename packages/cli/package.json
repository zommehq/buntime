{
  "name": "@buntime/cli",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "buntime": "./dist/buntime"
  },
  "scripts": {
    "build": "bun build ./src/index.tsx --outdir ./dist --target bun",
    "build:bin": "bun build ./src/index.tsx --compile --outfile ./dist/buntime-cli",
    "dev": ":",
    "lint": "bun run lint:format && bun run lint:types",
    "lint:format": "bun biome check --write",
    "lint:types": "bun tsc --noEmit"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "react": "^19.2.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/react": "^19.2.3",
    "ink-testing-library": "^4.0.0"
  }
}
