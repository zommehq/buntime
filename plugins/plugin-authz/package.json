{
  "name": "@buntime/plugin-authz",
  "version": "1.0.0",
  "type": "module",
  "buntime": {
    "entrypoint": "dist/index.js",
    "idleTimeout": 60
  },
  "exports": {
    ".": "./plugin.ts"
  },
  "scripts": {
    "build": "NODE_ENV=production bun scripts/build.ts",
    "dev": "bun scripts/build.ts --watch",
    "lint": "bun run lint:format && bun run lint:types",
    "lint:format": "bun biome check --write",
    "lint:types": "bun tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test --coverage 2>&1 | grep -vE '\\.\\./(packages|plugins)'",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@buntime/shadcn-ui": "workspace:*",
    "@buntime/shared": "workspace:*",
    "@iconify-icon/react": "^2.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tw-animate-css": "^1.3.4"
  },
  "peerDependencies": {
    "hono": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "bun-plugin-tailwind": "^0.1.2",
    "tailwindcss": "^4.1.17"
  }
}
