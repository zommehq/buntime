{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./client/*"],
      "@/*": ["./server/*"]
    },
    "types": ["@buntime/shared/types/virtual-modules"]
  },
  "include": ["index.ts", "plugin.ts", "client/**/*", "server/**/*", "tests/**/*", "scripts/*"],
  "exclude": ["node_modules", "dist"]
}
