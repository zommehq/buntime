{
  "name": "@buntime/plugin-metrics",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "bun": "./plugin.ts",
      "default": "./dist/plugin.js"
    }
  },
  "scripts": {
    "build": "NODE_ENV=production bun scripts/build.ts",
    "dev": "bun scripts/build.ts --watch",
    "lint": "bun run lint:format && bun run lint:types",
    "lint:format": "bun biome check --write",
    "lint:types": "bun tsc --noEmit",
    "start": "bun run build && bun --port=5010 dist/index.js",
    "test": "bun test",
    "test:coverage": "bun test --coverage 2>&1 | grep -vE '\\.\\./(packages|plugins)'",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@buntime/shared": "file:../../packages/shared",
    "@iconify-icon/react": "^2.1.0",
    "@tanstack/react-router": "^1.134.15",
    "@zomme/shadcn-react": "file:../../../shadcn-react",
    "lucide-react": "^0.561.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "2.15.4",
    "tw-animate-css": "^1.3.4",
    "vaul": "^1.1.2"
  },
  "peerDependencies": {
    "hono": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@zomme/bun-plugin-tsr": "^0.1.1",
    "bun-plugin-tailwind": "^0.1.2",
    "tailwindcss": "^4.1.17"
  },
  "buntime": {
    "entrypoint": "dist/index.js",
    "idleTimeout": 60
  }
}
