{
  "name": "@buntime/plugin-deployments",
  "version": "1.0.0",
  "type": "module",
  "buntime": {
    "entrypoint": "dist/index.js",
    "idleTimeout": 60
  },
  "exports": {
    ".": "./plugin.ts"
  },
  "scripts": {
    "build": "NODE_ENV=production bun scripts/build.ts",
    "dev": "bun scripts/build.ts --watch",
    "lint": "bun run lint:format && bun run lint:types",
    "lint:format": "bun biome check --write",
    "lint:types": "bun tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test --coverage 2>&1 | grep -vE '\\.\\./(packages|plugins)'",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@buntime/piercing": "workspace:*",
    "@buntime/shadcn-ui": "workspace:*",
    "@buntime/shared": "workspace:*",
    "@tanstack/react-query": "^5.80.7",
    "cmdk": "^1.1.1",
    "i18next": "^25.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^15.5.2",
    "semver": "^7.7.2",
    "sonner": "^2.0.3",
    "tw-animate-css": "^1.3.4"
  },
  "peerDependencies": {
    "hono": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/semver": "^7.7.0",
    "@zomme/bun-plugin-i18next": "^0.1.1",
    "@zomme/bun-plugin-iconify": "^0.1.2",
    "bun-plugin-tailwind": "^0.1.2",
    "tailwindcss": "^4.1.17"
  }
}
