{
  "name": "buntime",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production bun build index.ts --outdir ./dist",
    "dev": "bun --watch index.ts",
    "lint:format": "bun biome check --write",
    "lint:types": "bun tsc --noEmit",
    "lint": "bun run lint:format && bun run lint:types",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "test": "bun test"
  },
  "dependencies": {
    "es-toolkit": "^1.42.0",
    "hono": "^4.10.7",
    "quick-lru": "^7.3.0",
    "semver": "^7.7.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "^1.3.3",
    "@types/semver": "^7.7.1",
    "typescript": "^5.9.3"
  }
}
