{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "types": ["bun-types"]
  },
  "include": ["*.ts", "core/*.ts", "handlers/*.ts"],
  "exclude": ["node_modules", "dist"]
}
