{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun run \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task-plan/index.ts session-start",
            "timeout": 10,
            "statusMessage": "Loading task plan..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task-plan/index.ts user-prompt-submit",
            "timeout": 10,
            "statusMessage": "Resolving task plan context..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write|mcp_edit|mcp_write",
        "hooks": [
          {
            "type": "command",
            "command": "bun run \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task-plan/index.ts pre-tool-use",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash|mcp_bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun run \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/git-guard/index.ts pre-bash",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|mcp_edit|mcp_write",
        "hooks": [
          {
            "type": "command",
            "command": "bun run \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task-plan/index.ts post-tool-use",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "mcp_todowrite",
        "hooks": [
          {
            "type": "command",
            "command": "bun run \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task-plan/index.ts todo-updated",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task-plan/index.ts stop",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
