{
  "name": "todos-kv",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production bun scripts/build.ts",
    "dev": "bun scripts/build.ts --watch",
    "lint:format": "bun biome check --write",
    "lint:types": "bun tsc --noEmit",
    "lint": "bun run lint:format && bun run lint:types",
    "start": "bun run build && bun --port=5001 dist/index.js"
  },
  "dependencies": {
    "@buntime/keyval": "workspace:*",
    "@buntime/shared": "workspace:*",
    "clsx": "^2.1.1",
    "hono": "^4.7.10",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "redaxios": "^0.5.1"
  },
  "devDependencies": {
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "bun-plugin-tailwind": "^0.1.2",
    "tailwindcss": "^4.1.17"
  },
  "buntime": {
    "entrypoint": "dist/index.js",
    "idleTimeout": 30,
    "lowMemory": false,
    "maxRequests": 100,
    "timeout": 30,
    "ttl": 60
  }
}
